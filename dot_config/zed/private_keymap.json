// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Editor && vim_mode == insert && !menu",
    "bindings": {
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space s": "pane::DeploySearch",
      "space h": "file_finder::Toggle",
      "space t": "file_finder::Toggle",
      "space w": "workspace::Save",
      "space space": "editor::OpenExcerpts",
      "n": "search::SelectNextMatch",
      "shift-n": "search::SelectPreviousMatch"
    }
  },
  {
    "context": "vim_mode == normal && !Editor",
    "bindings": {
      "space t": "file_finder::Toggle"
    }
  },
  {
    "context": "ProjectSearch && vim_mode == normal",
    "bindings": {
      "n": "search::SelectNextMatch",
      "shift-n": "search::SelectPreviousMatch",
      "ctrl-n": "search::SelectNextMatch",
      "ctrl-p": "search::SelectPreviousMatch",
      "tab": "project_search::ToggleFocus"
    }
  }
]
