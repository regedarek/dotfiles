[
  {
    "bindings": {
      "ctrl-a": "workspace::ToggleRightDock",
      "ctrl-p": "workspace::ToggleLeftDock",
      "ctrl-t": "terminal_panel::ToggleFocus",
      "ctrl-l": "agent::ToggleFocus",
      "ctrl-h": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-p": "workspace::ToggleLeftDock",
      "ctrl-g": "git_panel::ToggleFocus"
    }
  },
  {
    "context": "GitPanel",
    "bindings": {
      "ctrl-p": "workspace::ToggleLeftDock",
      "ctrl-g": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "!ProjectPanel && !GitPanel",
    "bindings": {
      "ctrl-g": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-t": "workspace::ToggleBottomDock",
      "space r l": "task::Rerun"
    }
  },
  {
    "context": "Editor && vim_mode == insert && !menu",
    "bindings": {
      "ctrl-l": "agent::ToggleFocus",
      "ctrl-h": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space s": "pane::DeploySearch",
      "space h": "tab_switcher::Toggle",
      "space t": "file_finder::Toggle",
      "space w": "workspace::Save",
      "space space": "editor::OpenExcerpts",
      "space r l": "task::Rerun",
      "space r t": ["task::Spawn", {"task_name": "RSpec: Run current file"}],
      "g d": ["workspace::SendKeystrokes", "*"],
      "*": "vim::MoveToNext",
      "n": "vim::MoveToNext",
      "shift-n": "vim::MoveToPrevious",
      "ctrl-l": "agent::ToggleFocus",
      "ctrl-h": "project_panel::ToggleFocus",
      "-": "pane::RevealInProjectPanel"
    }
  },
  {
    "context": "!Editor && vim_mode == normal",
    "bindings": {
      "space h": "tab_switcher::Toggle",
      "space t": "file_finder::Toggle"
    }
  },
  {
    "context": "EmptyPane",
    "bindings": {
      "space h": "tab_switcher::Toggle",
      "space t": "file_finder::Toggle"
    }
  },
  {
    "context": "ProjectSearch && vim_mode == normal",
    "bindings": {
      "n": "search::SelectNextMatch",
      "shift-n": "search::SelectPreviousMatch",
      "ctrl-n": "search::SelectNextMatch",
      "tab": "project_search::ToggleFocus"
    }
  }
]
