{
  "edit_predictions": {
    "disabled_globs": [     "**/.env*",
     "**/*.pem",
     "**/*.key",
     "**/*.cert",
     "**/*.crt",
     "**/secrets.yml"]
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": true
  },
  "outline_panel": {
    "button": false
  },
  "project_panel": {
    "button": true
  },
  "status_bar": {
    "active_language_button": false,
    "cursor_position_button": true
  },
  "diagnostics": {
    "button": true
  },
  "debugger": {
    "button": false
  },
  "ensure_final_newline_on_save": false,
  "format_on_save": "off",
  "base_keymap": "SublimeText",
  "confirm_quit": true,
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "always_allow_tool_actions": true,
    "model_parameters": []
  },
  "lsp": {
    "solargraph": {
      "initialization_options": {
        "diagnostics": false
      }
    }
  },
  "languages": {
    "Ruby": {
      "language_servers": []
    }
  },
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "buffer_font_family": ".ZedMono",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark"
  },
  "vim_mode": true,
  "relative_line_numbers": false,
  "cursor_blink": false
}
